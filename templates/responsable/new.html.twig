{% extends 'base.html.twig' %}

{% block title %}{% if edit %}Editer un responsable{% else %}Ajouter un responsable{% endif %}{% endblock %}

{% block body %}


    {% if not edit %}<h1>Créer un responsable</h1>{% else %}<h1>Modifier un responsable</h1>{% endif %}
    {% if not edit %}<h3>Saisissez les informations essentielles du nouveau responsable</h3>{% else %}<h3>Modifiez les informations essentielles du responsable</h3>{% endif %}

    <div class="sous-cont">

        {# {{ form(formAddResponsable) }} #}

        {{ form_start(formAddResponsable) }}

        <h2>Identité du responsable</h2>

        <div>
            {{ form_label(formAddResponsable.sexe) }}
            {{ form_widget(formAddResponsable.sexe) }}
            {{ form_errors(formAddResponsable.sexe) }}
        </div>

        <div>
            {{ form_label(formAddResponsable.nom) }}
            {{ form_widget(formAddResponsable.nom) }}
            {{ form_errors(formAddResponsable.nom) }}
        </div>

        <div>
            {{ form_label(formAddResponsable.prenom) }}
            {{ form_widget(formAddResponsable.prenom) }}
            {{ form_errors(formAddResponsable.prenom) }}
        </div>


        <h2>Informations de contact</h2>

        <div>
            {{ form_label(formAddResponsable.tel) }}
            {{ form_widget(formAddResponsable.tel) }}
            {{ form_errors(formAddResponsable.tel) }}
        </div>

        <div>
            {{ form_label(formAddResponsable.email) }}
            {{ form_widget(formAddResponsable.email) }}
            {{ form_errors(formAddResponsable.email) }}
        </div>

        <h2>Informations complémentaires</h2>

        <div>
            {{ form_label(formAddResponsable.fonction) }}
            {{ form_widget(formAddResponsable.fonction) }}
            {{ form_errors(formAddResponsable.fonction) }}
        </div>

        <div>
            {{ form_end(formAddResponsable) }}
            <a class="btn btn-rose" href="{{ path('app_responsable') }}">Quitter</a> {# bouton pour retourner à la liste des responsables #}
        </div>

    </div>


{% endblock %}

{# {{ form(form) }} -> la fonction form permet de récup le formulaire, le deuxième form est le nom qui provient du controleur : on change ce nom pour éviter les confusions #}