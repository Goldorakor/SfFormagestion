{% extends 'base.html.twig' %}

{% block title %}{% if edit %}Editer un formateur{% else %}Ajouter un formateur{% endif %}{% endblock %}

{% block body %}


    {% if not edit %}<h1>Créer un formateur</h1>{% else %}<h1>Modifier un formateur</h1>{% endif %}
    {% if not edit %}<h3>Saisissez les informations essentielles du nouveau formateur</h3>{% else %}<h3>Modifiez les informations essentielles du formateur</h3>{% endif %}

    <div class="sous-cont">

        {# {{ form(formAddFormateur) }} #}

        {{ form_start(formAddFormateur) }}

        <h2>Identité du formateur</h2>

        <div class="form-ligne01">
            <div class="form-cell sexe">
                {{ form_label(formAddFormateur.sexe) }}
                {{ form_widget(formAddFormateur.sexe) }}
                {{ form_errors(formAddFormateur.sexe) }}
            </div>
    
            <div class="form-cell nom">
                {{ form_label(formAddFormateur.nom) }}
                {{ form_widget(formAddFormateur.nom) }}
                {{ form_errors(formAddFormateur.nom) }}
            </div>
    
            <div class="form-cell prenom">
                {{ form_label(formAddFormateur.prenom) }}
                {{ form_widget(formAddFormateur.prenom) }}
                {{ form_errors(formAddFormateur.prenom) }}
            </div>
        </div>

        <h2>Informations de contact</h2>

        <div class="form-ligne01">
            <div class="form-cell tel">
                {{ form_label(formAddFormateur.tel) }}
                {{ form_widget(formAddFormateur.tel) }}
                {{ form_errors(formAddFormateur.tel) }}
            </div>
    
            <div class="form-cell email">
                {{ form_label(formAddFormateur.email) }}
                {{ form_widget(formAddFormateur.email) }}
                {{ form_errors(formAddFormateur.email) }}
            </div>
        </div>

        <h2>Statut du formateur</h2>

        <div class="form-ligne01">
            <div class="form-cell forma-societe">
                {{ form_label(formAddFormateur.societe) }}
                {{ form_widget(formAddFormateur.societe) }}
                {{ form_errors(formAddFormateur.societe) }}
            </div>
    
            <div class="form-cell forma-statut">
                {{ form_label(formAddFormateur.statut) }}
                {{ form_widget(formAddFormateur.statut) }}
                {{ form_errors(formAddFormateur.statut) }}
            </div>
        </div>

        <div class="position-rose">
            {{ form_end(formAddFormateur) }}
            <a class="btn btn-rose" href="{{ path('app_formateur') }}"><i class="fa-solid fa-right-from-bracket"></i>Quitter</a> {# bouton pour retourner à la liste des formateurs #}
        </div>

    </div>

    
{% endblock %}

{# {{ form(form) }} -> la fonction form permet de récup le formulaire, le deuxième form est le nom qui provient du controleur : on change ce nom pour éviter les confusions #}